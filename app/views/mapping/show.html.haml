#mapping
  #animal
    - if @ra.nil?
      This animal does not exist, and not just existentially.
    - else
      #nickname
        = @ra.nickname
      #animal_id
        = "ID: #{@ra.animal_id}"
      #frequency
        = "Freq: #{@ra.frequency}"
      #microchip
        = "Chip: #{@ra.microchip}"
  #hitlist
    - if @rts.empty?
      No telemetry found.
    - else
      - @rts.each do |rt|
        = rt.date.strftime(STRFTIME)
        %br

  #map
    #map_canvas
      
:javascript
  var data = {
      id: #{@ra.nil? ? 0 : @ra.id}
  }
  $.ajax({
      url: TMap.basicPathUrl,
      type: "POST",
      data: data,
      dataType: 'json',
      success: function(json) {
          TMap.create(json);
      }
  });
